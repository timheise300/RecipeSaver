<li id="recipe-<%= recipe.id %>">
  <h3><%= recipe.name %></h3>
  <%= link_to gravatar_for(recipe.user, size: 25), recipe.user %>
  <span class="user"><%= link_to recipe.user.name, recipe.user %></span>
  <br />
  <span class="content">
    <%= image_tag recipe.picture.url if recipe.picture? %>
    <%= recipe.ingredients %>
    <br />
    <%= recipe.directions %>
    <br />
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(recipe.created_at) %> ago.
    <% if current_user?(recipe.user) %>
    <%= link_to "delete", recipe, method: :delete,
                                  data: { confirm: "Are you sure you want to delete this recipe?" } %>
    <% end %>
  </span>
  <br />
  <br />
</li>